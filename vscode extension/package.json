{
  "name": "templatemd",
  "displayName": "TemplateMD",
  "description": "Enhance Markdowns with templates",
  "version": "0.0.1",
  "author": {
    "name": "Roei Meiri"
  },
  "license": "MIT",
  "icon": "icons/templatemd.png",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tmd",
        "aliases": [
          "TemplateMarkdown",
          "TemplateMD",
          "TMD",
          "tmd"
        ],
        "extensions": [
          ".tmd"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/templatemd.svg",
          "dark": "./icons/templatemd.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "tmd",
        "scopeName": "source.tmd",
        "path": "./syntaxes/tmd.tmLanguage.json"
      },
      {
        "scopeName": "template.injection.tmd",
        "path": "./syntaxes/tmd.injection.tmLanguage.json",
        "injectTo": [
          "text.html.markdown",
          "source.tmd"
        ]
      }
    ],
    "fileIconThemes": [
      {
        "id": "templatemd-icons",
        "label": "TemplateMD File Icon",
        "path": "./icons/theme.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:tmd"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/RoeiMeiri9/templatemd"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "prettier": "^3.6.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "typescript": "^5.9.3",
    "vscode": "^1.1.37"
  }
}
